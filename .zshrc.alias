function rebuild() {
    if [ "$1" = "" ]; then
      echo "please set version";
    else
      eval $(minikube docker-env) \
      && docker build -f Dockerfile.minikube -t api-bizcrm:v1.0.$1 . \
      && kubectl set image deployment/bizcrm-api-deploy api=api-bizcrm:v1.0.$1
    fi
}


function git_push_open_pr() {
    if [ $# -ne 3 ];then
    	echo "1:remote 2:branch 3:pull request branch の設定をしてください"
    else
      git push "$1" "$2" && git-open -p "$3"
    fi
}

## cucumberを実行 -dオプションで返却データを出力
function c() {
    D=
    O=
    while :
    do
        case $1 in
            -d) D="DEBUG=1"
                shift
                ;;
            -o) O="OUTPUT=1"
                shift
                ;;
            *)  break
                ;;
        esac
    done


